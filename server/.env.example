# ============================================
# DATABASE CONFIGURATION
# ============================================
# For local development with MongoDB Compass:
# MONGODB_URI=mongodb://localhost:27017/happiness-therapy-app

# For production with MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/happiness-therapy-app?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/happiness-therapy-app

# ============================================
# JWT & SECURITY
# ============================================
# Generate with: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=4000
NODE_ENV=development

# ============================================
# CORS & FRONTEND
# ============================================
# Local development:
# CORS_ORIGIN=http://localhost:5173

# Production (Vercel):
# CORS_ORIGIN=https://happiness-therapy-app-frontend.vercel.app
CORS_ORIGIN=http://localhost:5173

# ============================================
# DEFAULT CREDENTIALS (Change in production!)
# ============================================
THERAPIST_EMAIL=hapiness@example.com
THERAPIST_PASSWORD=password123

